<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrdb"
    tools:context=".MainActivity">


    <Button
        android:id="@+id/btnClinicAdminLogin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnClinicAdminLogin"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.535" />

    <Button
        android:id="@+id/btnStaffStud"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/btnStaffStud"
        android:fontFamily="sans-serif-medium"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnClinicAdminLogin"
        app:layout_constraintStart_toStartOf="@+id/btnClinicAdminLogin"
        app:layout_constraintTop_toBottomOf="@+id/btnClinicAdminLogin"
        app:layout_constraintVertical_bias="0.164" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="324dp"
        android:layout_height="182dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.045"
        app:srcCompat="@drawable/dut_logo" />

    <TextView
        android:id="@+id/txtviewMain"
        android:layout_width="320dp"
        android:layout_height="72dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtviewMain"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/btnStaffStud"
        app:layout_constraintStart_toStartOf="@+id/btnStaffStud"
        app:layout_constraintTop_toBottomOf="@+id/btnStaffStud"
        app:layout_constraintVertical_bias="0.705" />

    <TextView
        android:id="@+id/txtVMain1"
        android:layout_width="161dp"
        android:layout_height="83dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtVMain1"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintBottom_toTopOf="@+id/btnClinicAdminLogin"
        app:layout_constraintEnd_toEndOf="@+id/btnClinicAdminLogin"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/btnClinicAdminLogin"
        app:layout_constraintTop_toBottomOf="@+id/imageView"
        app:layout_constraintVertical_bias="0.635" />


</androidx.constraintlayout.widget.ConstraintLayout>
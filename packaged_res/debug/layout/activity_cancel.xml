<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrdb"
    tools:context=".Cancel">

    <TextView
        android:id="@+id/txtCancelEmail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtCancelEmail"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="25sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.054" />

    <TextView
        android:id="@+id/txtSubject"
        android:layout_width="339dp"
        android:layout_height="48dp"
        android:layout_marginTop="24dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtSubject"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtT0"
        app:layout_constraintStart_toStartOf="@+id/txtT0"
        app:layout_constraintTop_toBottomOf="@+id/txtT0" />

    <TextView
        android:id="@+id/txtT0"
        android:layout_width="157dp"
        android:layout_height="37dp"
        android:layout_marginTop="72dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtTO"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtCancelEmail"
        app:layout_constraintHorizontal_bias="0.503"
        app:layout_constraintStart_toStartOf="@+id/txtCancelEmail"
        app:layout_constraintTop_toBottomOf="@+id/txtCancelEmail" />

    <EditText
        android:id="@+id/edtMessage"
        android:layout_width="266dp"
        android:layout_height="171dp"
        android:layout_marginTop="76dp"
        android:ems="10"
        android:textColorHint="@color/black"
        android:text="@string/edtMessage"
        android:gravity="start|top"
        android:textColor="@color/black"
        android:fontFamily="sans-serif-black"
        android:inputType="textMultiLine"
        app:layout_constraintEnd_toEndOf="@+id/txtSubject"
        app:layout_constraintHorizontal_bias="0.493"
        app:layout_constraintStart_toStartOf="@+id/txtSubject"
        app:layout_constraintTop_toBottomOf="@+id/txtSubject" />

    <Button
        android:id="@+id/btnsend"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="56dp"
        android:text="@string/btnsend"
        app:layout_constraintEnd_toEndOf="@+id/edtMessage"
        app:layout_constraintStart_toStartOf="@+id/edtMessage"
        app:layout_constraintTop_toBottomOf="@+id/edtMessage" />


</androidx.constraintlayout.widget.ConstraintLayout>
<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bgrdb"
    tools:context=".ClinicAdminLogin">


    <TextView
        android:id="@+id/txtCALogin"
        android:layout_width="345dp"
        android:layout_height="31dp"
        android:backgroundTint="@color/white"
        android:fontFamily="sans-serif-black"
        android:gravity="center"
        android:text="@string/txtCALogin"
        android:textColor="@color/black"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.052" />

    <Spinner
        android:id="@+id/Campus_dropdown"
        android:layout_width="276dp"
        android:layout_height="56dp"
        android:layout_marginTop="68dp"
        android:background="#30ffffff"
        android:backgroundTint="@color/white"
        android:contentDescription="@string/txtvCampus"
        android:entries="@array/campus"
        android:fontFamily="sans-serif-black"
        android:textAlignment="center"
        app:layout_constraintEnd_toEndOf="@+id/txtvCampusSelect"
        app:layout_constraintStart_toStartOf="@+id/txtvCampusSelect"
        app:layout_constraintTop_toBottomOf="@+id/txtvCampusSelect" />

    <Button
        android:id="@+id/btnlogincal"
        android:layout_width="125dp"
        android:layout_height="46dp"
        android:layout_marginTop="40dp"
        android:backgroundTint="@color/purple_500"
        android:text="@string/btnlogincal"
        app:layout_constraintEnd_toEndOf="@+id/edtpwdcal"
        app:layout_constraintStart_toStartOf="@+id/edtpwdcal"
        app:layout_constraintTop_toBottomOf="@+id/edtpwdcal" />

    <EditText
        android:id="@+id/edtpwdcal"
        android:layout_width="300dp"
        android:layout_height="48dp"
        android:layout_marginTop="60dp"
        android:ems="10"
        android:fontFamily="sans-serif-black"
        android:hint="@string/edtpwdcal"
        android:inputType="textPassword"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textColorHint="@color/black"


        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/Campus_dropdown"
        app:layout_constraintHorizontal_bias="0.541"
        app:layout_constraintStart_toStartOf="@+id/Campus_dropdown"
        app:layout_constraintTop_toBottomOf="@+id/Campus_dropdown" />

    <TextView
        android:id="@+id/txtvCampusSelect"
        android:layout_width="207dp"
        android:layout_height="47dp"
        android:layout_marginTop="100dp"
        android:fontFamily="sans-serif-black"
        android:text="@string/txtvCampusSelect"
        android:textAlignment="center"
        android:textColor="@color/black"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="@+id/txtCALogin"
        app:layout_constraintStart_toStartOf="@+id/txtCALogin"
        app:layout_constraintTop_toBottomOf="@+id/txtCALogin" />


</androidx.constraintlayout.widget.ConstraintLayout>